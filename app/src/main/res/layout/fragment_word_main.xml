<?xml version="1.0" encoding="utf-8"?>
<app.mosn.zdepthshadowlayout.ZDepthShadowLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:shadow="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	shadow:z_depth="z_depth2"
	shadow:z_depth_shape="rect"
	shadow:z_depth_padding="z_depth2">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:color/white">

		<com.test.opower.goodrecite.word_page.word_main.WordMainPanel
			android:id="@+id/pnlWordStatistics"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="0.375"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>

		<com.test.opower.goodrecite.model.CstmBtn
			android:id="@+id/btnSelWBook"
			android:text="选择单词表"
			android:textSize="20sp"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.3125"
			android:gravity="center"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>

		<com.test.opower.goodrecite.model.CstmBtn
			android:id="@+id/btnSetPlan"
			android:text="设定学习计划"
			android:textSize="20sp"
			android:textAlignment="center"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.3125"
			android:gravity="center"/>
	</LinearLayout>
</app.mosn.zdepthshadowlayout.ZDepthShadowLayout>